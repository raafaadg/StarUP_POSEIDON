<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Ll1_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_vistas_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/menu_square" />

        <Spinner
            android:id="@+id/sp_fabricas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="6" />

        <ImageView
            android:id="@+id/ic_config_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/gv_maquinas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:columnWidth="50dp"
            android:stretchMode="columnWidth"
            android:numColumns="4"
            android:layout_margin="4dp"
            android:layout_weight="9" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_maquinas_config"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/settings" />
            <ImageView
                android:id="@+id/iv_maquinas_legenda"
                android:layout_below="@+id/iv_maquinas_config"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/settings" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>